<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CentroDeportivo.ModificarSocioPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label
                Text="Modifique la condición de socio de un usuario"
                FontSize="17" TextColor="Gray" FontAttributes="Bold"
                Margin="10,10"
            />
            <Entry
                x:Name="codigoEntry"
                Placeholder="Código de usuario"
                FontSize="18"
                Margin="10,0"
            />
            <Button
                x:Name="ModificarBtn"
                Text="MODIFICAR"
                BackgroundColor="LightGray"
                Padding="12" Margin="10,20"
                WidthRequest="150" HorizontalOptions="Start"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="Modificar_Clicked"
             />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

