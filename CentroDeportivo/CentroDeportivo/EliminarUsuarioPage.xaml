<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CentroDeportivo.EliminarUsuarioPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label
                Text="Introduzca el código del usuario a eliminar"
                FontSize="17" TextColor="Gray" FontAttributes="Bold"
                Margin="10,10"
            />
            <Entry
                x:Name="codigoEntry"
                Placeholder="Código de usuario"
                FontSize="18"
                Margin="10,0"
            />
            <Button
                x:Name="EliminarBtn"
                Text="ELIMINAR"
                BackgroundColor="LightGray"
                Padding="12" Margin="10,20"
                TextColor="Black" FontAttributes="Bold"
                WidthRequest="150" HorizontalOptions="Start"
                Clicked="EliminarUsuario_Clicked"
            />    
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

